<div class="card">
    <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="@ImgSrc" style="height:150px;object-fit: cover;">
    </div>
    <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">@CardTitle<i class="material-icons right">more_vert</i></span>
        <p><a href="@AnchorHref">@AnchorText</a></p>
    </div>
    <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">@CardTitle<i class="material-icons right">close</i></span>

        @foreach (var line in CardDescription)
        {
            <p>@line</p>
        }
    </div>
</div>