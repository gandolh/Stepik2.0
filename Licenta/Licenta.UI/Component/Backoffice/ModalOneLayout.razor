        <Button Class="modal-close" Color=ButtonColor.Secondary AriaLabel="Close this dialog window">Cancel</Button>
        <Button Color=ButtonColor.Red Clicked=@HandleRemove>Delete</Button>
    </Footer>
</Components.UI.Modal.Modal>