@inherits BaseLicentaComp
@using Licenta.SDK.Services
@using Microsoft.AspNetCore.Components.Authorization

<nav>
    <div class="nav-wrapper">
        <a href="/" class="brand-logo">
            <img src="imgs/logo.gif" width="48" height="48">
        </a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
            <CascadingAuthenticationState>
                <AuthorizeView>
                    <Authorized>
                        <li><a href="crud">Crud</a></li>
                        <li><a href="courses">Cursuri</a></li>
                        <li style="display: flex;align-items: center;">
                            <ProfileCard Fullname=@ClaimHelper.GetFullName(context.User)
                                         Email=@ClaimHelper.GetEmail(context.User) />
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <UnathenticatedGroupBtn/>
                    </NotAuthorized>
                </AuthorizeView>
            </CascadingAuthenticationState>
        </ul>
    </div>
</nav>

<ul class="sidenav" id="mobile-demo">
    <li><a href="courses">Cursuri</a></li>
</ul>