@page "/crud/lesson/{ViewMode?}/{Id:int?}";
@using Licenta.UI.Components.Backoffice.Lesson
@inherits BaseCrudPage

<CrudPageLayout>
    @if (string.IsNullOrEmpty(ViewMode))
    {
        <LessonAll />
    }else if (ViewMode.Contains("one") && Id!= null)
    {
        <LessonOne Id="@((int)Id)" />
    }
</CrudPageLayout>