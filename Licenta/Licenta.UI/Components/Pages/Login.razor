@page "/login"
@inherits BaseLicentaComp
<main>
    <center class="verticallyCenteredBody bodyWithoutNavHeight">
        <div class="container containerLogin">
            <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                <form class="col s12">
                    <div class='row'>
                        <div class='col s12'>
                        </div>
                    </div>

                    <div class='row'>
                        <h4>Login</h4>
                        <div class='input-field col s12'>
                            <input placeholder="email" id="email" type="email" class="validate"
                                   required>
                            <label class="active" for="email">Email</label>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input placeholder="password" id="password" type="password"
                                   class="validate" minlength="6"
                                   required>
                            <label class="active" for="password">Password</label>
                        </div>
                        <label style='float: right;'>
                            <a class='teal-text' href='#!'><b>Forgot Password?</b></a>
                        </label>
                    </div>

                    <br />
                    <center>
                        <div class='row'>
                            <button type="button" class='col s12 btn btn-large waves-effect' onclick="Auth.handleLogin()">Login</button>
                                <span id="error-login" class="red-text"> </span>
                        </div>
                    </center>
                    <a href="register">Create account</a>
                </form>
            </div>
        </div>
    </center>

</main>
