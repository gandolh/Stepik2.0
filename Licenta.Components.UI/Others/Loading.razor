@using Licenta.Components.UI.Enums;

<div class="LoadingScreen @Class">
    <div class="spinner-border loadingContent" role="status">
    </div>
    <Heading Size="HeadingSize.Is5" Class="fw-bold mb-0">
        @if (!string.IsNullOrEmpty(Label))
        {
            @Label
        }
        else
        {
            @ChildContent
        }
    </Heading>
</div>  