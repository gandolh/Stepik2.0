@using Licenta.Components.UI.Dropdown
@using Licenta.Components.UI.Enums;
@using Licenta.Components.UI.Others
@using Licenta.SDK.Localization;

@inherits BaseCetComponent<ComponentsResource>

<Dropdown>
    <DropdownToggle Class="nav-icon">
        <Icon Name="@IconNameParam" />
        <span class="badge bg-primary badge-number">0</span>
    </DropdownToggle>
    <DropdownMenu Class="notifications">
        <Items>
                <DropdownItem Class="notification-item text-center" AnchorClass="w-100 text-center">
                    @if (ParentPageState == PageState.Loading)
                    {
                            <Loading Label="@ErrorLabel" />
                    }
                    else
                    {
                            <h5> @EmptyLabel </h5>
                    }
                </DropdownItem>
        </Items>
    </DropdownMenu>
</Dropdown>