@using Licenta.Components.UI.Utils;
@inherits NewComponent

<div class="form-check">
    <input @onchange="ChangeRadioInput" class="form-check-input" type="radio" name="@Name" id="@GetId()" checked="@Checked" disabled="@Disabled">
    <label for="@GetId()" class="form-check-label @Class">
        @ChildContent
    </label>
</div>