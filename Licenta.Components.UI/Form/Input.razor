@using Licenta.Components.UI.Utils;
@inherits NewComponent

<input 
    id="@GetId()"
    type="@getInputTypeParameter()" 
    class="form-control @Class" 
    placeholder="@Placeholder"
    style="@Style"
    value="@Value"
    maxlength="@Maxlength"
       @onchange="@(@HandleOnChange)"
       @oninput="@(@HandleOnInput )"
       aria-readonly="false"
    disabled="@Disabled"
>